# Development Environment Configuration

# Backend Configuration for Local Testing
BACKEND_URL=http://localhost:7071
BACKEND_API_VERSION=v2
BACKEND_API_KEY=              # Leave empty for local testing

# Server Configuration
MCP_MODE=lite                  # Start with LITE for testing
LOG_LEVEL=debug               # Verbose logging for development
NODE_ENV=development

# Feature Flags
ENABLE_CACHING=false          # Disable caching during development
ENABLE_TELEMETRY=true         # Track local metrics
ENABLE_V1_COMPATIBILITY=true  # Support V1 handlers during migration

# Development Settings
DEV_AUTO_RELOAD=true
DEV_MOCK_AUTH=false           # Set to true to bypass auth in development
DEV_VERBOSE_ERRORS=true

# Performance
REQUEST_TIMEOUT=30000         # 30 seconds for development
MAX_RETRIES=3