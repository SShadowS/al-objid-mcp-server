# AL Object ID Ninja MCP Server V2 Configuration
# Copy this file to .env and customize as needed

# ==============================================================================
# BACKEND CONFIGURATION
# ==============================================================================

# Backend URL - defaults to public backend (no API key required)
BACKEND_URL=https://vjekocom-alext-weu.azurewebsites.net

# Optional: API key for self-hosted backends
# BACKEND_API_KEY=your-api-key-here

# ==============================================================================
# MCP SERVER CONFIGURATION
# ==============================================================================

# MCP Mode
# - lite: Basic tools (authorization, config, allocate_id, analyze_workspace)
# - standard: Full feature set (coming soon)
MCP_MODE=lite

# Logging level: error, warn, info, debug
LOG_LEVEL=info

# ==============================================================================
# PERFORMANCE CONFIGURATION
# ==============================================================================

# Enable caching for better performance
CACHE_ENABLED=true

# Cache time-to-live in milliseconds (default: 5 minutes)
CACHE_TTL=300000

# ==============================================================================
# GIT CONFIGURATION (Optional)
# ==============================================================================

# Used for authorization - auto-detected from git config if not set
# GIT_USER=your-name
# GIT_EMAIL=your-email@example.com
# GIT_REPO=https://github.com/your-org/your-repo

# ==============================================================================
# TEST CONFIGURATION (Optional)
# ==============================================================================

# For testing with persistent app data
# TEST_APP_ID=your-test-app-id
# TEST_AUTH_KEY=your-auth-key
